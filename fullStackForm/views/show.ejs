<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users List</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-800 text-white">
    <div class="w-full h-screen flex flex-col items-center space-y-6 py-10">
      <h1 class="text-5xl font-bold mb-4">All Users</h1>

      <div class="flex flex-wrap justify-center gap-6">
        <% if (users.length > 0) { %>
          <% users.forEach(user => { %>
            <div class="bg-zinc-700 rounded-xl p-6 w-72 shadow-lg">
              <h2 class="text-xl font-semibold text-blue-300"><%= user.name %></h2>
              <p class="text-md text-gray-300 mt-2"><strong>Username:</strong> <%= user.username %></p>
              <p class="text-md text-gray-300"><strong>Email:</strong> <%= user.email %></p>

              <div class="flex justify-between mt-4">
                <a href="/edit/<%= user._id %>" class="text-yellow-400 hover:underline">Edit</a>
                <form action="/delete/<%= user._id %>" method="post">
                  <button
                    type="submit"
                    class="text-red-400 hover:underline"
                    onclick="return confirm('Are you sure you want to delete this user?')"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <h2 class="text-gray-400 text-xl">No users found.</h2>
        <% } %>
      </div>

      <a href="/" class="text-blue-400 hover:underline font-semibold mt-6">Go Back</a>
    </div>
  </body>
</html>
